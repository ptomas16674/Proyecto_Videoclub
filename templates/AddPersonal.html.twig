{# templates/Personal.html.twig #}
{% if app.user %}
             {% if app.user.Admin==1 %}
                <form action="{{ path('FormAddPersonal') }}" method="post">
                        <div class="form-group">
                             <table class="table table-striped table-hover table-responsive-xl w-auto table-dark mt-2" id="tabla_personal">
                                <thead>
                                    <tr class="text-center">
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Fecha Nacimiento</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Final</th>
                                        <th>Horario</th>
                                        <th>Salario</th>
                                        <th>Alias</th>
                                        <th>Clave</th>
                                    </tr>
                                </thead>
                        <tr class="text-center">                            
                            
                            <td>
                                <input type="text" id="nombre" name="nombre" class="form-control form-control-sm" required="required" />
                            </td>
                            
                            <td>
                                <input type="text" id="apellido" name="apellido" class="form-control form-control-sm" required="required" />
                            </td>
                            
                            <td>
                                <input type="number" id="fecha_nacimiento" name="fecha_nacimiento" class="form-control form-control-sm" min="0" required="required" />
                            </td>
                            
                            <td>
                                <input type="number" id="fecha_inicio" name="fecha_inicio" class="form-control form-control-sm" min="0" required="required" />
                            </td>
                            
                            <td>
                                <input type="number" id="fecha_final" name="fecha_final" value="0" class="form-control form-control-sm" min="0"/>
                            </td>
                            
                            <td>
                                <input type="text" id="horario" name="horario" class="form-control form-control-sm"/>
                            </td>
                            <td>
                                <input type="number" id="salario" name="salario" value="0" class="form-control form-control-sm" min="0" required="required"/>
                            </td>
                            <td>
                                <input type="text" id="alias" name="alias" class="form-control form-control-sm"/>
                            </td>
                            
                            <td>
                                <input type="text" id="clave" name="clave" class="form-control form-control-sm"/>
                            </td>
                        </tr>
                    </table>
            </div>
                    <button type="submit" class="btn btn-success">Confirmar</button>
       </form>
   {% else %}
     {{ include('ErrorPermisos.html.twig') }}
  {% endif %}
{% endif %}