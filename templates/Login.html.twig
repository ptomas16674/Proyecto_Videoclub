{# templates/Login.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
            <title>Login Empleados</title>
                    {% block stylesheets %}
                            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" >
                            <link rel="stylesheet" href="{{ asset('css/otros_estilos.css') }}" type="text/css"/>                            
                    {% block javascripts %}
                            <script src="{{ asset('js/jquery-3.4.1.min.js') }}" type="text/javascript"></script>
                            <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
                    {% endblock %}
		{% endblock %}
    </head>
        <body>
                            <div id="login_formulario" class="row justify-content-center text-justify text-light">
                                    <div class="col-md-4 col-sm-12 ">
                                        <div class="d-flex justify-content-center">
                                           
                                <form action="{{ path('Login') }}" method="post">
                                    <div class="form-group">
                                            <label class="col-form-label-md mt-3 ml-5">Empleado</label>
                                            <input type="text" id="username" name="_username" class="form-control form-control-sm border border-primary rounded" placeholder="Introduce alias" />
                                    </div>

                                        <div class="form-group">
                                                <label class="col-form-label-md mt-3 ml-5">Clave</label>
                                                <input type="password" id="password" name="_password" class="form-control form-control-sm border border-primary rounded" placeholder="Introduce contraseÃ±a" />
                                        </div>
                                            <button type="submit" class="btn btn-outline-light btn-lg ml-5 mb-2 ">Entrar</button>
                                            <br>
                                            <button id="Home" type="button" class="btn btn-outline-light btn-lg ml-5 ">Home</button>
                                </form>
                                        </div>
                                    </div>
                            </div>
                                    
                        <script>
                           $("#Home").click(function(){
                                route="{{ path('Home')}}";
                                window.location.href=route;           
                            });
                        </script>
        </body>
</html>
